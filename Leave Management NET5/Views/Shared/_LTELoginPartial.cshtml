@using Microsoft.AspNetCore.Identity
@using Leave_Management_NET5.Data
@inject SignInManager<Employee> SignInManager
@inject UserManager<Employee> UserManager

<ul class="nav nav-pills nav-sidebar flex-column">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="nav-link">
                <i class="nav-icon fas fa-user"></i>
                <p>@User.Identity.Name</p>
            </a>
        </li>

        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-white text-left"><i class="nav-icon fas fa-sign-out-alt"></i> Logout</button>
            </form>

        </li>

    }
    else
    {
        <li class="nav-item">
            <a asp-area="Identity" asp-page="/Account/Register" class="nav-link">
                <i class="nav-icon far fa-registered"></i>
                <p>Register</p>
            </a>
        </li>
        <li class="nav-item">
            <a asp-area="Identity" asp-page="/Account/Login" class="nav-link">
                <i class="nav-icon fas fa-sign-in-alt"></i>
                <p>Login</p>
            </a>
        </li>
    }
</ul>
