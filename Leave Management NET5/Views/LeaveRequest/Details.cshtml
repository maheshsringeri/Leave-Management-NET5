@model Leave_Management_NET5.Models.LeaveRequestVM

@{
    ViewData["Title"] = "Details";
}

@if (Model.Approved == null)
{
    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">Pending Approval</h4>
        <p><strong>@Html.DisplayNameFor(model => model.RequestingEmployeeId):</strong>  @Html.DisplayFor(model => model.RequestingEmployee.Firstname) @Html.DisplayFor(model => model.RequestingEmployee.Lastname) </p>
        <hr>
        <p class="mb-0">@Html.DisplayNameFor(model => model.DateRequested) - @Html.DisplayFor(model => model.DateRequested)</p>
    </div>
}
else if (Model.Approved == true)
{
    <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">Approved By @Html.DisplayFor(model => model.ApprovedBy.Firstname) @Html.DisplayFor(model => model.ApprovedBy.Lastname) [@Html.DisplayFor(model => model.ApprovedBy.Email)] </h4>
        <p><strong>@Html.DisplayNameFor(model => model.RequestingEmployeeId):</strong>  @Html.DisplayFor(model => model.RequestingEmployee.Firstname) @Html.DisplayFor(model => model.RequestingEmployee.Lastname) </p>
        <hr>
        <p class="mb-0">@Html.DisplayNameFor(model => model.DateRequested) - @Html.DisplayFor(model => model.DateRequested)</p>
    </div>
}
else
{
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Rejected By @Html.DisplayFor(model => model.ApprovedBy.Firstname) @Html.DisplayFor(model => model.ApprovedBy.Lastname) [@Html.DisplayFor(model => model.ApprovedBy.Email)]</h4>
        <p><strong>@Html.DisplayNameFor(model => model.RequestingEmployeeId):</strong>  @Html.DisplayFor(model => model.RequestingEmployee.Firstname) @Html.DisplayFor(model => model.RequestingEmployee.Lastname) </p>
        <hr>
        <p class="mb-0">@Html.DisplayNameFor(model => model.DateRequested) - @Html.DisplayFor(model => model.DateRequested)</p>
    </div>
}

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RequestingEmployee)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RequestingEmployee.Firstname) @Html.DisplayFor(model => model.RequestingEmployee.Lastname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LeaveType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LeaveType.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RequestComments)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RequestComments)
        </dd>
    </dl>
</div>
<hr />
<div>
    @if (Model.Approved == null)
    {
        <a class="btn btn-success btn-sm" asp-action="ApproveRequest" asp-route-id="@Model.Id"><i class="fa fa-thumbs-up"></i> Approve</a>
        <a class="btn btn-danger btn-sm" asp-action="RejectRequest" asp-route-id="@Model.Id"><i class="fa fa-thumbs-down"></i> Reject</a>
    }

    <a class="btn btn-dark btn-sm" asp-action="Index"><i class="fa fa-backward"></i> Back to List</a>
</div>
