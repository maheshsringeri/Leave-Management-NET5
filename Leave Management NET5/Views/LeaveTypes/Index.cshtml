@model IEnumerable<Leave_Management_NET5.Models.LeaveTypeVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Leave Type</h1>
<hr />
<p>
    <a asp-action="Create" class="btn btn-success btn-sm"><i class="fa fa-plus" aria-hidden="true"></i> Create New</a>
</p>
<table id="tblData" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th style="text-align:center;">
                @Html.DisplayNameFor(model => model.DefaultDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td style="text-align:center;">
                    @Html.DisplayFor(modelItem => item.DefaultDays)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    <div class="d-inline-block"><a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="far fa-edit"></i></a></div>
                    <div class="d-inline-block"><a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary"><i class="fas fa-info-circle"></i></a></div>
                    <div class="d-inline-block">
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete the record.');"><i class="fas fa-trash-alt"></i></button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

